#!/usr/bin/env ruby
require_relative '../lib/ruby_game'

DEBUG = true

game = RubyGame::Game.new

RubyGame::Monster.define_profile :ghost do
    image_name 'ghost3'
    speed 0.15
    action :move_left, speed: 1, repeat: 30
    action :move_up, speed: 2, repeat: 10
    action :move_down, speed: 0.5, repeat: 100
end

# Go! Go! Go!
game.start! do
    ruby RubyGame::Ruby.new 65, 115
    player RubyGame::Player.new 300, 400
    #monster RubyGame::Monster.new
    monsters Array.new(2) {RubyGame::Monster.build(:ghost)} #populates an Array X times with the content returned by the block
end